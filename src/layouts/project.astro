---
import MainHead from "../components/main-head.astro";
import Footer from "../components/footer.astro";
import Nav from "../components/nav.astro";

const { content } = Astro.props;
const styleDark = `background-image: linear-gradient(rgba(0,89,126,0.8) 0%, rgba(27, 113, 149,0.8) 100%), url(${content.img})`
const styleLight = `background-image: linear-gradient(rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.6)), url(${content.img})`
---

<html lang={content.lang || "en" }>

<head>
	<MainHead title={`Sylwia Pekala: ${content.title}`}
		description="Portfolio project of Sylwia Pekala, a Senior Product Designer" />
</head>

<body>
	<Nav />
	<header style={content.img_theme==='light' ? styleLight : styleDark}
		class="h-60 md:h-80 bg-no-repeat bg-center bg-cover flex flex-col gap-5 justify-center items-center">
		{content.logo && <img src={content.logo} class="md:w-96 w-52" />}
		{!content.logo && <h1
			class="text-white p-2 text-3xl text-center md:text-5xl uppercase font-semibold font-heading">
			{content.title}</h1>}
		<div class="text-white uppercase font-semibold">{content.type}</div>
	</header>
	<div class="bg-brand-50">
		<div class="container mx-auto max-w-screen-lg text-white p-4">
			ROLE: <strong>{content.role}</strong>
		</div>
	</div>
	<main>
		<div
			class="container mx-auto max-w-prose prose lg:prose-lg prose-stone py-10 px-4 prose-li:marker:text-pink-300">
			<slot />
		</div>
	</main>
	<section>
		<div class="container mx-auto flex flex-col items-center px-2 pb-14 justify-center">
			<a href="/portfolio" class="font-semibold bg-brand-100 py-5 px-16 inline-block text-white leading-none">Back
				to
				portfolio</a>
		</div>
	</section>
	<Footer />
</body>

</html>